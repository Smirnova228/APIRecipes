@model IEnumerable<EatsOnAPI.Models.Component>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CountComponent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameComponent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Delete)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CountComponent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameComponent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Delete)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.NumberComponent">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.NumberComponent">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.NumberComponent">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
