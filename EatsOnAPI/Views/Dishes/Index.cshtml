@model IEnumerable<EatsOnAPI.Models.Dish>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NameDish)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DescriptionDish)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageDish)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coast)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeCook)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameProperty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Delete)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameDish)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DescriptionDish)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImageDish)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Coast)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeCook)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameCategory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameProperty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Delete)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ArticleDish">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ArticleDish">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ArticleDish">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
